<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBlue"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="73.4dp"
        android:layout_height="69dp"
        android:src="@drawable/logo"
        android:layout_marginStart="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivTextLogo"
        />

    <ImageView
        android:id="@+id/ivTextLogo"
        android:layout_width="208.17dp"
        android:layout_height="27.85dp"
        android:src="@drawable/textlogo"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toTopOf="@id/ivLogo"
        app:layout_constraintStart_toStartOf="@id/ivTextLogo"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:layout_width="207.46dp"
        android:layout_height="12.17dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/slogan"
        app:layout_constraintStart_toEndOf="@id/ivLogo"
        app:layout_constraintTop_toBottomOf="@id/ivTextLogo"
        />
</androidx.constraintlayout.widget.ConstraintLayout>