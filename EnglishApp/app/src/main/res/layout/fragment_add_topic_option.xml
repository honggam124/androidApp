<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.Add.AddTopicOptionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/radius_20"
        android:backgroundTint="@color/backgroundBlue"
        android:layout_height="match_parent">

    <View
        android:id="@+id/v_forgotPass"
        android:layout_width="130dp"
        android:layout_height="3dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/bt_topic"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="Import csv"
        android:textColor="@color/darkBlue"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:background="@drawable/radius_10"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/v_forgotPass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/bt_folder"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="@string/create_new"
        android:textStyle="bold"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="@color/darkBlue"
        android:background="@drawable/radius_10"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/bt_topic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>