<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".forgotpass.ForgotOTPFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/radius_20"
        android:layout_height="match_parent">

        <View
            android:id="@+id/v_forgotPass"
            android:layout_width="130dp"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_titleOTP"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VERIFY OTP"
            android:textColor="@color/backgroundBlue"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/v_forgotPass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="300dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/please_enter_4_digit_code_that_you_received_on_your_email"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_titleOTP" />

        <LinearLayout
            android:id="@+id/ll_otp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/tv_content">

            <EditText
                android:id="@+id/et_1"
                android:layout_width="50dp"
                android:layout_margin="5dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/backgroundBlue"
                android:background="@drawable/radius_10"
                android:alpha="0.5"/>

            <EditText
                android:id="@+id/et_2"
                android:layout_width="50dp"
                android:layout_margin="5dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/backgroundBlue"
                android:background="@drawable/radius_10"
                android:alpha="0.5"/>

            <EditText
                android:id="@+id/et_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/backgroundBlue"
                android:background="@drawable/radius_10"
                android:alpha="0.5"/>

            <EditText
                android:id="@+id/et_4"
                android:layout_width="50dp"
                android:layout_margin="5dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/backgroundBlue"
                android:background="@drawable/radius_10"
                android:alpha="0.5"/>
        </LinearLayout>

        <Button
            android:id="@+id/bt_submit"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/radius_20"
            android:backgroundTint="@color/darkBlue"
            android:text="@string/submit"
            android:textColor="@color/dark_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_otp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>